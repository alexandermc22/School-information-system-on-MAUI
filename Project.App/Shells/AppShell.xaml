<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:r="clr-namespace:Project.App.Views.Student"
    xmlns:z="clr-namespace:Project.App.Views.Subject"
    xmlns:local="clr-namespace:Project.App.Views"
    x:Class="Project.App.Shells.AppShell"
    x:Name="AppShellRoot"
    Shell.FlyoutBehavior="Disabled">
    
    <Shell.MenuBarItems>
        <MenuBarItem Text="student"> 
                <MenuFlyoutItem Command="{Binding Source={x:Reference AppShellRoot}, Path=GoToStudentsCommand}"></MenuFlyoutItem>
        </MenuBarItem>
        <MenuBarItem Text="subject"> 
            <MenuFlyoutItem Command="{Binding Source={x:Reference AppShellRoot}, Path=GoToSubjectsCommand}"></MenuFlyoutItem>

        </MenuBarItem>
    </Shell.MenuBarItems>
    <ShellContent ContentTemplate="{DataTemplate r:StudentListView}" Route="students" />
    <ShellContent ContentTemplate="{DataTemplate z:SubjectListView}" Route="subjects" />

</Shell>
