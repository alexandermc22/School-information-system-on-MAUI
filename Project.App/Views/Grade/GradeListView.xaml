<?xml version="1.0" encoding="utf-8"?>

<views:ContentPageBase xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                       xmlns:views="clr-namespace:Project.App.Views"
                       x:Class="Project.App.Views.Grade.GradeListView"
                       xmlns:m="clr-namespace:Project.BL.Models;assembly=Project.BL"
                       xmlns:vm="clr-namespace:Project.App.ViewModels.Grade"
                       x:DataType="vm:GradeListViewModel"
                       x:Name="GradeListViewRoot">
    
      <Grid HorizontalOptions="FillAndExpand" 
         RowDefinitions="Auto, *"
         RowSpacing="20">
        <!-- <SearchBar Grid.Row="0" -->
        <!--            Placeholder="Search...." -->
        <!--            WidthRequest="300" -->
        <!--            Text="{Binding Code}" -->
        <!--            SearchCommand="{Binding GetFilteredCommand }" -->
        <!--            ></SearchBar> -->
        <!-- <Button Grid.Row="0" -->
        <!--         Padding="12, 6" -->
        <!--         HorizontalOptions="End" VerticalOptions="Start" -->
        <!--         Text="Button" -->
        <!--         Command="{Binding GoToCreateCommand}" -->
        <!--         CornerRadius="5" FontFamily="MontserratMedium" -->
        <!--         FontSize="14" -->
        <!--         Style="{StaticResource PrimaryButtonStyle}" /> -->
        <!-- -->
        <!-- <Button Grid.Row="1" -->
        <!--         Padding="12, 6" -->
        <!--         HorizontalOptions="End" VerticalOptions="Start" -->
