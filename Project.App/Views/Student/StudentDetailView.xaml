        <!-- </Grid> -->
        
        
        <!-- <HorizontalStackLayout HorizontalOptions="End" -->
        <!--                        Spacing="15" -->
        <!--                        HeightRequest="30"> -->
        <Grid Grid.Row="0"
              RowSpacing="15"
              HeightRequest="30" >
            <Button 
                    VerticalOptions="Start"
                    WidthRequest="100"
                    HeightRequest="50"
                    Text="Delete"
                    CornerRadius="5"
                    BackgroundColor="{StaticResource ErrorColor}"
                    Command="{Binding DeleteCommand}" />
            <Button 
                    HorizontalOptions="End" VerticalOptions="Start"
                    WidthRequest="100"
                    HeightRequest="50"
                    Text="Edit"
                    CornerRadius="5"
                    Command="{Binding GoToEditCommand}"
                    Style="{StaticResource PrimaryButtonStyle}" />
        </Grid>
        
        

        <Grid Grid.Row="1"
              ColumnDefinitions="*, Auto"
              ColumnSpacing="20">
            <ScrollView Orientation="Vertical">
                <Grid RowDefinitions="Auto, Auto, Auto, Auto, Auto, *"
                      RowSpacing="20">
                    <Label Grid.Row="0"
                           Text="{Binding Student.FirstName}"
                           TextColor="{StaticResource PrimaryLabelTextColor}"
                           FontSize="20" />
                    <Label Grid.Row="1"
                           Text="{Binding Student.LastName}"
                           FontSize="20" />

                    <Label Grid.Row="2"
                           Text="subjects"
                           FontSize="16" />

                    <CollectionView Grid.Row="5"
                                    ItemsSource="{Binding Student.StudentSubjects}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:StudentSubjectsDetailModel">
                                <HorizontalStackLayout>
                                    <Frame Margin="5, 5, 20, 5"
                                           Style="{StaticResource ImageFrameStyle}">
                                        <Image Source="{Binding SubjectImageUrl, TargetNullValue='ingredient_placeholder.jpg'}"
                                               WidthRequest="60" HeightRequest="60"
                                               Aspect="AspectFill" />
                                    </Frame>

                                    <Label VerticalOptions="Center">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="{Binding SubjectCode}" />
                                                <Span Text=" " />
                                                <Span Text="{Binding SubjectName}" />
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                </HorizontalStackLayout>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </Grid>
            </ScrollView>

            <Grid Grid.Column="1"
                  RowDefinitions="Auto, *"
                  RowSpacing="20">
                <Frame Grid.Row="0"
                       Style="{StaticResource ImageFrameStyle}">
                    <Image Source="{Binding Student.Photo, TargetNullValue='ingredient_placeholder.jpg'}"
                           WidthRequest="320" HeightRequest="240"
                           Aspect="AspectFill" />
                </Frame>
            </Grid>
        </Grid>
    </Grid>
</views:ContentPageBase>