<views:ContentPageBase xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                       xmlns:views="clr-namespace:Project.App.Views"
                       x:Class="Project.App.Views.Activity.ActivityListView"
                       xmlns:m="clr-namespace:Project.BL.Models;assembly=Project.BL"
                       xmlns:vm="clr-namespace:Project.App.ViewModels"
                       xmlns:activity="clr-namespace:Project.App.ViewModels.Activity"
                       x:DataType="activity:ActivityListViewModel">
    
    <Grid HorizontalOptions="FillAndExpand" RowDefinitions="Auto, *"
          RowSpacing="20">
        
        <HorizontalStackLayout HorizontalOptions="End"
                               Spacing="15"
                               HeightRequest="30">
            <Button Text="create"
                    CornerRadius="5"
                    BackgroundColor="{StaticResource PrimaryColor}"
                    Command="{Binding GoToCreateCommand}" />

            <!-- <Button Text="sort" -->
            <!--         CornerRadius="5" -->
            <!--         BackgroundColor="{StaticResource PrimaryColor}" -->
            <!--         Command="{Binding SortCommand}" /> -->
        </HorizontalStackLayout>
        
        
        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding Subject}">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Horizontal"
                                 HorizontalItemSpacing="10" VerticalItemSpacing="10"
                                 Span="2" />
            </CollectionView.ItemsLayout>
        
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="m:ActivityListModel">
                <Frame Style="{StaticResource ImageFrameStyle}">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding Source={x:Reference ActivityListViewRoot}, Path=BindingContext.GoToDetailCommand}"
                                              CommandParameter="{Binding Id}" />
                    </Frame.GestureRecognizers>
                    <Grid RowDefinitions="*, *">

                        <Label Grid.Row="1"
                               Margin="22,12"
                               FontSize="20" LineBreakMode="WordWrap"
                               Text="{Binding SubjectName}"
                               TextColor="White" VerticalOptions="End" />
                        <Label Grid.Row="1"
                               Margin="22,12"
                               FontSize="20" LineBreakMode="WordWrap"
                               Text="{Binding Code}"
                               TextColor="White" VerticalOptions="End" />
                        <Label Grid.Row="1"
                               Margin="22,12"
                               FontSize="20" LineBreakMode="WordWrap"
                               Text="{Binding ActivityStartTime}"
                               TextColor="White" VerticalOptions="End" />
                        
                    </Grid>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
        
